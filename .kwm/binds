# KEYBINDS

# Quit Kwm
kwmc bind cmd+alt+ctrl-q quit

kwmc bind cmd+ctrl-a space -t bsp
kwmc bind cmd+ctrl-s space -t monocle
kwmc bind cmd+ctrl-d space -t float
kwmc bind cmd+ctrl-r tree rotate 90

# Launcher
kwmc bindsym cmd+ctrl-m exec sm

# Modify Container
kwmc bind prefix-x window -c split-mode toggle
kwmc bind prefix-j window -c reduce 0.05
kwmc bind prefix-k window -c expand 0.05
kwmc bind prefix-o window -c type toggle

# Set Temporary Window Container
kwmc bind prefix-f window -z fullscreen
kwmc bind prefix-d window -z parent
kwmc bind prefix-w window -t focused

# Give Focus To Window
kwmc bind cmd+alt-j window -f west
kwmc bind cmd+alt-k window -f east
kwmc bind cmd+alt-u window -f south
kwmc bind cmd+alt-m window -f north

# Give Focus To Screen
kwmc bind cmd+alt-1 display -f 0
kwmc bind cmd+alt-2 display -f 1

# Swap Focused Window
kwmc bind ctrl+alt-j window -s west
kwmc bind ctrl+alt-k window -s south
kwmc bind ctrl+alt-u window -s north
kwmc bind ctrl+alt-m window -s east

# Pseudo containers
kwmc bind cmd+ctrl+alt-p tree -pseudo create
kwmc bind cmd+ctrl+alt-o tree -pseudo destroy

# Detach Focused Window And Reinsert In Direction
kwmc bind ctrl+shift-u window -m north
kwmc bind ctrl+shift-k window -m east
kwmc bind ctrl+shift-m window -m south
kwmc bind ctrl+shift-j window -m west

# Move Focused Window To Space
kwmc bind ctrl+alt-left window -m space left
kwmc bind ctrl+alt-right window -m space right

# Move Focused Window To Screen
kwmc bind ctrl+alt-down window -m display 0
kwmc bind ctrl+alt-up window -m display 1

# Autowrite
kwmc bind cmd-7 write \
kwmc bind cmd-8 write {
kwmc bind cmd-9 write }
