%YAML 1.2
---
name: Notes
file_extensions: [yml, not]
scope: source.notes

contexts:
  main:
    - match: "^\\s*(-|\\*|\\+|•|>|◦|->|<->)\\s"
      scope: constant.other.color
    - match: "^\\s*(\\?|!)\\s"
      scope: markup.deleted.git_gutter
    - match: "(\\-\\-\\-*)"
      scope: constant.character.notes
    - match: "^\\s*(.+):\\s"
      scope: variable.parameter.function
    - match: "\\B([\\d\\.]+)\\B"
      scope: keyword.notes
    - match: ~(.+?)~
      scope: markup.italic, punctuation.definition.italic
    - match: \*(.+?)\*
      scope: markup.bold, punctuation.definition.bold
    - match: \[(.+?)\]
      scope: constant.other.color
    - match: \{(.+?)\}
      scope: constant.other.color
    - match: ^\s*([\d\.]*)
      scope: constant.character.notes
    - match: (?x) (\w+) (?:[ \t]+ (\w+) (?:[ \t]+ (\w+))? )?
      scope: text.notes
    - match: "^\\s*(\\^\\s.*)\\s"
      scope: constant.character.notes
    - match: "[\\s\\t]*(\\^\\s.*)$"
      scope: constant.character.notes
