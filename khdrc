# Enable the boxing mode
khd mode default on_enter chunkc border::color 0xff282a36
khd mode boxing on_enter chunkc border::color 0xffE82D63

# Activate boxing mode
ctrl + alt - s           : khd -e "mode activate boxing"
boxing + ctrl + alt - s  : khd -e "mode activate default"

# Rotate Tree
alt - r 			     : chunkc tiling::desktop --rotate 90
ctrl + alt - r           : chunkc tiling::window --grid-layout width:900

# mirror tree y-axis
alt - y 				 : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
alt - x 				 : chunkc tiling::desktop --mirror horizontal

# toggle window split type
alt - e 				 : chunkc tiling::window --toggle split

# float / unfloat window
alt - f 				 : chunkc tiling::window --toggle float

# float next window to be tiled
shift + alt - t 		 : chunkc tiling::window_float_next 1

shift + alt - f          : chunkc tiling::window --toggle float; chunkc tiling::window --grid-layout 5:5:1:0:3:5

# change layout of desktop
cmd + ctrl - a 			 : chunkc tiling::desktop --layout bsp
cmd + ctrl - s 			 : chunkc tiling::desktop --layout monocle
cmd + ctrl - d 			 : chunkc tiling::desktop --layout float

# increase region size
boxing - h       		 : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
boxing - j       		 : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
boxing - k       		 : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
boxing - l       		 : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# decrease region size
boxing + alt - h        	 : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east
boxing + alt - j          : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
boxing + alt - k          : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
boxing + alt - l          : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west

#cmd + alt - h            : chunkc tiling::window -i west
#cmd + alt - j            : chunkc tiling::window -i south
#cmd + alt - k            : chunkc tiling::window -i north
#cmd + alt - h            : chunkc tiling::window -i east

# Focus window
focus - h                  : chunkc tiling::window --focus west
focus - j                  : chunkc tiling::window --focus south
focus - k                  : chunkc tiling::window --focus north
focus - l                  : chunkc tiling::window --focus east
focus - p                  : chunkc tiling::window --focus prev
focus - n                  : chunkc tiling::window --focus next

# Swap Focused Window
ctrl + alt - h           : chunkc tiling::window --swap west
ctrl + alt - j           : chunkc tiling::window --swap south
ctrl + alt - k           : chunkc tiling::window --swap north
ctrl + alt - l           : chunkc tiling::window --swap east

# move window
shift + cmd - h 		 : chunkc tiling::window --warp west
shift + cmd - j 		 : chunkc tiling::window --warp south
shift + cmd - k 		 : chunkc tiling::window --warp north
shift + cmd - l 	     : chunkc tiling::window --warp east

# Move Focused Windows through Screens and Spaces
ctrl + cmd - h 			 : chunkc tiling::window --send-to-desktop prev
ctrl + cmd - l 			 : chunkc tiling::window --send-to-desktop next
ctrl + cmd - j  		 : chunkc tiling::window --send-to-monitor 1; chunkc monitor -f 1
ctrl + cmd - k  		 : chunkc tiling::window --send-to-monitor 2; chunkc monitor -f 2

# float / unfloat window and center on screen
alt - t : chunkc tiling::window --toggle float;\
          chunkc tiling::window --grid-layout 5:5:1:0:3:4

##########
# VIM MODE
# remap left-control h/j/k/l -> arrow keys
    lctrl - h         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- left"
    lctrl - j         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- down"
    lctrl - k         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- up"
    lctrl - l         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- right"

    shift + lctrl - h ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - left"
    shift + lctrl - j ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - down"
    shift + lctrl - k ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - up"
    shift + lctrl - l ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift - right"

# remap left-control g / G   -> start / end of text
    lctrl - g         ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - up"
    lctrl + shift - g ![HyperTerm,Terminal,iTerm2]      :   khd -p "cmd - down"

    shift + lctrl - 0 ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + cmd - left"
    shift + lctrl - 4 ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + cmd - right"

# remap left-control b / e   -> start / end of word
    lctrl - b         ![HyperTerm,Terminal,iTerm2]      :   khd -p "alt - left"
    lctrl - e         ![HyperTerm,Terminal,iTerm2]      :   khd -p "alt - right"

    shift + lctrl - b ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + alt - left"
    shift + lctrl - e ![HyperTerm,Terminal,iTerm2]      :   khd -p "shift + alt - right"

# remap left-control x       -> forward delete
    lctrl - x         ![HyperTerm,Terminal,iTerm2]      :   khd -p "- delete"
